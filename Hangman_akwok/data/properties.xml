        <property name="DEFAULT_NO_TEXT"            value="No"></property>
        <property name="DEFAULT_EXIT_TEXT"          value="Are you sure you wish to Quit?"></property>
    </property_list>
    <property_options_list>
        <property_options name="LANGUAGE_OPTIONS">
            <option>English</option>
            <option>Esperanto</option>
            <option>French</option>
        </property_options>
        <property_options name="LANGUAGE_DATA_FILE_NAMES">
            <option>EN.xml</option>
            <option>EO.xml</option>
            <option>FR.xml</option>
        </property_options>
        <property_options name="LANGUAGE_IMAGE_NAMES">
            <option>EN.png</option>
            <option>EO.png</option>
            <option>FR.png</option>
        </property_options>
    </property_options_list>
