<?xml version="1.0" encoding="UTF-8"?>
<!--
    The properties in this file are loaded when the HangMan game application
    first loads.
-->
<properties>
    <property_list>    
        <property name="WINDOW_ICON"                value="HangManWindowIcon.png"></property>
        <property name="SPLASH_SCREEN_TITLE_TEXT"   value="Select a Language"></property>
        <property name="WINDOW_WIDTH"               value="800"></property>
        <property name="WINDOW_HEIGHT"              value="620"></property>
        <property name="SPLASH_SCREEN_IMAGE_NAME"   value="HangManSplashScreen.png"></property>
        <property name="DATA_PATH"                  value="./data/"></property>
        <property name="IMG_PATH"                   value="./img/"></property>
        <property name="LETTERS_FONT_FAMILY"        value="monospaced"></property>
        <property name="LETTERS_FONT_SIZE"          value="24"></property>
        <property name="GUESSES_FONT_FAMILY"        value="monospaced"></property>
        <property name="GUESSES_FONT_SIZE"          value="22"></property>
        <property name="GUESS_FONT_SIZE"            value="36"></property>
        <property name="GUESS_FONT_FAMILY"          value="monospaced"></property>
